<li class="item flexrow item-header">
  <!-- <div class="item-image"></div> -->
  <div class="codex-name">
    <span>{{localize "arm5e.sheet.base-effects"}} </span>
    <span> ( {{ system.baseEffectCount }} )</span>
  </div>
  <div class="item-controls">
    <a class="item-control base-effect-create" title="Add Base effect" data-technique="{{system.techniqueFilter}}"
      data-form="{{system.formFilter}}"><i class="fas fa-plus"></i></a>
  </div>
</li>
{{> "systems/arm5e/templates/generic/metalic-bar.html" }}
{{#each system.filteredBaseEffects as |effect id|}}
  <li class="item spell-value flexrow flex-center" data-name="{{effect.system.name}}" data-item-id="{{effect.id}}"
    data-item-type="{{effect.type}}">
    <div class="flexrow flex-center">
      <span class="flexrow spell-title design" data-name="{{effect.name}}">
        <!--TODOV10 clean that mole below-->
        {{effect.name}} ( {{#with (lookup @root.config.magic.arts effect.system.technique.value)~}}{{short~}}
        {{/with}} {{#with (lookup @root.config.magic.arts effect.system.form.value)~}}{{short~}} {{/with}}
        {{effect.system.baseLevel}} )
      </span>
    </div>
    <div class="item-controls">
      <a class="item-control alt-design" title='{{localize "arm5e.hints.design" item=(localize "ITEM.TypeSpell")}}'><i
          class="fa-xl fas fa-gavel"></i></a>
      <a class="item-control item-edit"
        title='{{localize "arm5e.hints.edit" item=(localize "arm5e.sheet.base-effects")}}'><i
          class="icon-Icon_Edit"></i></a>
      <a class="item-control effect-delete"
        title='{{localize "arm5e.hints.delete" item=(localize "arm5e.sheet.base-effects")}}'><i
          class="icon-Icon_Delete_Hand_Gesture"></i></a>
    </div>
  </li>
{{/each}}